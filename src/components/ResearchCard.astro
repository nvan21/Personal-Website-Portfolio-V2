---
interface Props {
  title: string;
  authors: string;
  content: string;
  date: string;
  thumbnailUrl: string;
  githubUrl: string;
  publicationUrl: string;
}

const {
  title,
  authors,
  content,
  date,
  thumbnailUrl,
  githubUrl,
  publicationUrl,
} = Astro.props;

import { Icon } from "astro-icon/components";
---

<div class="flex space-x-10 p-8">
  <img src={thumbnailUrl} class="h-full w-2/5 rounded-lg" />

  <div class="flex w-3/5 flex-col justify-center space-y-3">
    <div class="text-header font-sora text-2xl font-bold">{title}</div>
    <div class="text-body font-lexend text-md italic">{authors}</div>
    <div class="text-body font-lexend text-lg">{content}</div>
    <div class="flex items-center justify-between">
      <div class="flex space-x-2 text-5xl text-slate-200">
        <a
          href={githubUrl}
          target="_blank"
          class="rounded-lg bg-slate-700 p-0.5"><Icon name="mdi:github" /></a
        >
        <a
          href={publicationUrl}
          target="_blank"
          class="rounded-lg bg-slate-700 p-0.5"><Icon name="mdi:note-text" /></a
        >
      </div>
      <div
        class="font-source h-max w-max rounded-lg bg-slate-700 px-4 py-1 font-bold text-slate-200"
      >
        {date}
      </div>
    </div>
  </div>
</div>
